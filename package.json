{
  "name": "space-trader",
  "version": "0.1.0",
  "description": "Galaxy-scale live market simulator with deterministic simulation",
  "main": "src/local-server.ts",
  "scripts": {
    "dev": "tsx watch src/local-server.ts",
    "local:dev": "tsx watch src/local-server.ts",
    "prelocal:build": "npm run type-check",
    "local:build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && vitest run",
    "test:watch": "vitest",
    "test:coverage": "npm run type-check && vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run type-check",
    "analyze:economy": "./scripts/run-economy-analysis.sh",
    "test:economy": "./scripts/test-economy-analysis.sh",
    "economy:loop": "./scripts/economy-feedback-loop.sh",
    "container:up": "./container-run.sh up",
    "container:down": "./container-run.sh down",
    "container:logs": "./container-run.sh logs",
    "container:test": "./container-run.sh test",
    "container:build": "./container-run.sh build"
  },
  "keywords": [
    "simulation",
    "market"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.1.0",
    "better-sqlite3": "^12.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "seedrandom": "^3.0.5"
  }
}
